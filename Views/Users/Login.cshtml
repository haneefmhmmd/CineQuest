@model _301301555_301287005_Laylay_Muhammad__Lab3.Models.LoginUser

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}


<div class="user-container">
    <div class="user-box dark-theme">
        <h2 class="text-center mb-4">Login</h2>
        <form asp-action="Login" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger validation-summary-errors"></div>
            <div class="mb-3">
                <label asp-for="Username" class="form-label"></label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="PasswordHash" class="form-label">Password</label>
                <input asp-for="PasswordHash" class="form-control" type="password"/>
                <span asp-validation-for="PasswordHash" class="text-danger"></span>
            </div>
            <input type="submit" value="Login" class="btn btn-success w100 p-2" />
            <p class="text-center mt-2">
                Don't have an account? <a asp-asp-controller="User" asp-action="Register" class="text-decoration-none">Register</a>
            </p>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
